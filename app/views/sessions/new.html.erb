<h1>Login</h1>


<%= form_for @user, :html => {:class => "ui form"}, url: login_path, method: :post do |f| %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
  <%= f.label :password %>
  <%= f.password_field :password %>
  </div>

  <%= f.submit class: 'ui button', value: "log in" %>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>
