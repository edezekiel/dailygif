<h1>Gif Wizards:</h1>

<div class="ui link cards">
  <% @users.each do |user| %>

  <a class="ui card" href="<%= user_path(user) %>">
    <div class="content">
      <div class="header"><%= user.username.titleize %></div>
    </div>

    <div class="image">
        <img src="<%= user.gifs.first.giflink %>">
    </div>
  </a>

  <% end %>
</div>
