
<div class="ui middle aligned center aligned grid">
  <div class="ten wide column left aligned">
    <div class="ui padded segment">
    <h1 class="ui blue header">Sign Up</h1>
      <%= form_for @user, :html => {:class => "ui form"}, controller: 'user', action: 'create' do |f| %>
        <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>

      <%= f.submit class: 'ui button primary', value: "Create" %>
      <% end %>
    </div>
  </div>
</div>
